<h1>Search users</h1>
<div class="container search">
    <%= form_tag('search', :method => "get", id: "search-form") do %>
    <div class="row">
        <div class="col-xs-12">
            <%= text_field_tag :search, params[:search], placeholder: "Search User", class: "form-control" %>
        </div>
        <div class="col-xs-12">
            <%= submit_tag "Search", class: "btn btn-primary search-button" %>
        </div>
    </div>
    <% end %>
</div>
<table class="table table-striped">
    <tbody>
        <% @users.each do |user|%>
        <tr>
            <td>
                <%= link_to controller: "friends", action: "show", id: user.id do %>
                <%= user.name || user.email %>
                <% end %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
